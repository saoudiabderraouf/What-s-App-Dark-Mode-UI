<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_home">

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginLeft="10dp"
        android:padding="10dp"
        android:orientation="vertical"
        android:background="@drawable/background_your_story"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/stor_image"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_add"
                android:layout_centerInParent="true"/>
            <ImageView
                android:id="@+id/stor_image_outline"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/background_dashed_image_outline"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/stor_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Create Your Story"
            android:textColor="#CCCBCB"
            android:textSize="12sp"
            android:gravity="center"/>


    </LinearLayout>

</LinearLayout>