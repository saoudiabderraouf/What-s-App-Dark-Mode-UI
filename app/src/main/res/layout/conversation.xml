<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:paddingHorizontal="20dp"
    android:weightSum="5"
    android:orientation="horizontal"
    android:background="@color/black">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginRight="10dp"
        android:gravity="center">
        <ImageView
            android:id="@+id/conv_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/img1"
            android:layout_centerInParent="true"/>
        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/background_image_outline"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3.25"
        android:layout_marginVertical="10dp"
        android:weightSum="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/conv_contact_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Abolfazl"
            android:textColor="#DDDDDD"
            android:textSize="16dp"
            android:maxLength="20"
            android:layout_marginTop="7dp"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/conv_last_message"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="The unseen of spending tree"
            android:textColor="#AAAAAA"
            android:textSize="12dp"
            android:layout_marginBottom="7dp"
            android:gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:paddingVertical="5dp"
        android:layout_weight="0.75"
        android:layout_marginVertical="10dp"
        android:weightSum="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/conv_time"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="09:50"
            android:textColor="#DDDDDD"
            android:textSize="12dp"
            android:maxLength="5"
            android:gravity="center"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:id="@+id/conv_unseen_messages"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="2"
                android:textColor="#FFFFFF"
                android:textSize="12dp"
                android:background="@drawable/background_circle_red"
                android:gravity="center"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>